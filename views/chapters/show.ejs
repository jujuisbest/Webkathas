                        <p><em>Replied To:</em><strong><%= comment.repliedTo.userid.username %></strong></p>  
                         <p><%- comment.repliedTo.text %></p> 
                          </div>
                       <% } %>
</div>
                    
          <% if(currentUser) {%>                
         <div class="pull-left inline">
              <button  class="btn btn-sm btn-dark commentReply" >
              Reply
              </button>
         </div> 
           <% } else {%>
           <div class="pull-left inline">
              <a  class="btn btn-sm btn-dark " href="/login" >
              Reply
              </a>
         </div> 
         <% }%>
            <% if(currentUser &&comment.author.id.equals(currentUser._id)) {%>
            <div style="padding-left:5px;" class="pull-left inline">
                 <button  class="btn btn-sm btn-warning commentEdit " >
              Edit
              </button>
        <form class="deletecommentForm inline" name="myForm" action="/books/<%=book._id%>/chapters/<%=chapter._id%>/comments/<%=comment._id%>?_method=DELETE" method="POST">
            <button class="btn  btn-sm btn-danger " onclick=" return deleteButton()"  >Delete</button>
        </form>
            </div> 
            
            
             <form  action ="/books/<%=book._id%>/chapters/<%=chapter._id%>/comments/<%=comment._id%>?_method=PUT" method="POST" class="edit-item-form">
     
