                    <textarea class="form-control summernote1" type="text" name="comment[text]" ><%-comment.text%></textarea>
                </div>
                    <button style="width:100px;" type="submit" class="btn but btn-sm btn-primary btn-block commentEdit ">Edit</button>
            </form>
        <% } %>
        <form class="replycommentForm" action ="/books/<%=book._id%>/chapters/<%=chapter._id%>/<%=comment._id%>/reply" method="POST">
