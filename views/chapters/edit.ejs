<style>
        body{
            background:#f2f2f2;
            font-family: Merriweather,serif !important;
        }
        
                .note-popover .popover-content, .card-header.note-toolbar {
        visibility: hidden;
}
    </style>
	
	<div class="limiter">
		<div class="container-login100">
			<div style="width:80%" class="wrap-login100">
				<form action ="/books/<%=book._id%>/chapters/<%=chap._id%>/?_method=PUT" method="POST" class="login100-form validate-form">
					<span class="login100-form-title p-b-26">
					Edit the chapter:<%=chap.title%>
					</span>
					<span class="login100-form-title p-b-48">
						<i class="zmdi zmdi-storage"></i>
					</span>

					<div class="wrap-input100 " >
					  <label>Chapter Number</label>
						<input class="input100" type="text" name="chapter[chapter_no]" value="<%=chap.chapter_no%>">
							<span class="focus-input100" ></span>
					</div>
					
						<div class="wrap-input100 " >
						 <label>Chapter Name</label>
						<input class="input100"  type="text" name="chapter[title]" value="<%=chap.title%>">
							<span class="focus-input100" ></span>
					</div>
					<label>Chapter Content</label>
					<div class="wrap-input100 " >
       
       <textarea class="input100"  type="text" id="summernote" name="chapter[text]" value=""><%-chap.text%></textarea>
							<span class="focus-input100" ></span>
					</div>
					
					<div class="wrap-input100 " >
       <label>Author thought</label>
       <textarea class="input100"  id="summernote1" type="text" name="chapter[author_thought]" placeholder="Author thought"><%-chap.author_thought%></textarea>
							<span class="focus-input100" ></span>
					</div>
	

					<div class="container-login100-form-btn">
						<div class="wrap-login100-form-btn">
							<div class="login100-form-bgbtn"></div>
							<button class="login100-form-btn">
								Publish
							</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
	

	
	
