<% include ../partials/headerauthChap %>
  <style>
        body{
            background:#f2f2f2;
            font-family: Merriweather,serif !important;
        }
        
        .note-popover .popover-content, .card-header.note-toolbar {
        visibility: hidden;
}
    </style>
	
	<div class="limiter">
		<div class="container-login100">
			<div style="width:80%" class="wrap-login100">
				<form action ="/books/<%=book._id%>/chapters" method="POST" class="login100-form validate-form">
					<span class="login100-form-title p-b-26">
					Write a new chapter
					</span>
					<span class="login100-form-title p-b-48">
						<i class="zmdi zmdi-storage"></i>
					</span>

					<div class="wrap-input100 " >
						<input class="input100" type="text" name="chapter[chapter_no]" required>
						<span class="focus-input100" data-placeholder="Chapter N.O (only numerical value)"></span>
					</div>
					
						<div class="wrap-input100 " >
						<input class="input100"  type="text" name="chapter[title]"  required>
						<span class="focus-input100" data-placeholder="Chapter Title"></span>
					</div>
					
					<div class="wrap-input100 " >
                        <label>Chapter Content</label>
                        <textarea class="input100"  type="text" id="summernote4" name="chapter[text]" placeholder="Content" required></textarea>
						
					</div>
					
					<div class="wrap-input100 " >
                        <label>Author thought</label>
                        <textarea class="input100"  id="summernote5" type="text" name="chapter[author_thought]" placeholder="Author thought"></textarea>
						
					</div>
	

					<div class="container-login100-form-btn">
						<div class="wrap-login100-form-btn">
							<div class="login100-form-bgbtn"></div>
							<button class="login100-form-btn">
								Publish
							</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
	

	
	
