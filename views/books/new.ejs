<% include ../partials/headerauthBook %>

    <style>
        body{
            background:#f2f2f2;
        }
    </style>
	
	<div class="limiter">
		<div class="container-login100">
			<div style="width:50%" class="wrap-login100">
				<form action ="/books" method="POST" enctype="multipart/form-data" class="login100-form validate-form">
					<span class="login100-form-title p-b-26">
						Write a new book
					</span>
					<span class="login100-form-title p-b-48">
						<i class="zmdi zmdi-book"></i>
					</span>
					
					<div class="wrap-input100 " >
					    <label>Book Image</label>
						<input class="input100" type="file" id="image" name="image" accept="image/*">
						<span class="focus-input100" ></span>
					</div>
					<label>Book Title</label>
					<div class="wrap-input100 " >
					    
						<input class="input100" type="text" name="title"  required>
						<span class="focus-input100" data-placeholder="Book Title"></span>
					</div>

					<div style="border:none;" class="wrap-input100" >
					<label>Genre</label>
						
						<select class="form-control input100" type="text" name="genre" required>
                <option value="" disabled selected hidden>Genre</option>
                 <option value="Action">Action</option>
                  <option value="Adventure">Adventure</option>
                  <option value="Adult">Adult</option>
                  <option value="Classics">Classics</option>
                  <option value="Fiction">Fiction</option>
                  <option value="Fanfiction">Fanfiction</option>
                  <option value="Fantasy">Fantasy</option>
                  <option value="Horror">Horror</option>
                  <option value="Humor">Humor</option>
                  <option value="Mystery">Mystery</option>
                  <option value="Poetry">Poetry</option>
                  <option value="Romance">Romance</option>
                  <option value="Science Fiction">Science Fiction</option>
                  <option value="Short Story">Short Story</option>
                  <option value="Spiritual">Spiritual</option>
                  <option value="Thriller">Thriller</option>
                  <option value="Urban">Urban</option>
            </select>
					</div>
					
					
					
					
					
					<div style="border:none;" class="wrap-input100" >
						<label>Range</label>
            <select class="form-control input100" type="text" name="range" required>
                <option value="" disabled selected hidden>Select Range</option>
                 <option value="General Audience">General Audience</option>
                  <option value="Parental Guidance Suggested">Parental Guidance Suggested</option>
                  <option value="Parents Strongly cautioned">Parents Strongly cautioned</option>
                  <option value="Above 15">Above 15</option>
                  <option value="Only Above 18">Only Above 18</option>
            </select>
					</div>
					
					
				<div class="wrap-input100 " >
					
			<label>Synopsis</label>
            <textarea class="input100" type="text" id="summernote" name="synopsis" placeholder="synopsis" required></textarea>

					</div>
					
				

				

					<div class="container-login100-form-btn">
						<div class="wrap-login100-form-btn">
							<div class="login100-form-bgbtn"></div>
							<button class="login100-form-btn">
								Submit
							</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
	

	<div id="dropDownSelect1"></div>
	
