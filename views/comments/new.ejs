<% include ../partials/header %>
<div class="container">
    <div class="row">
         <h1 style="text-align:center">Add New Comment to</h1>
    <div style="width:30%; margin:25px auto ">
        <%if(reply==null) {%>
        <form action ="/books/<%=book._id%>/chapters/<%=chapter._id%>/comments" method="POST">
        <div class="form-group">
                 <input class="form-control" type="text" name="comment[text]" placeholder="text">
        </div>
        <div class="form-group">
            <button class="btn btn-lg btn-primary btn-block">Submit</button>
        </div>
    </form>
        <% } else {%>
         <h1 style="text-align:center">Add New Comment to some comment <%=comment.author.username%></h1>
         <form action ="/books/<%=book._id%>/chapters/<%=chapter._id%>/<%=comment._id%>/reply" method="POST">
        <div class="form-group">
                 <input class="form-control" type="text" name="comment[text]" placeholder="text">
        </div>
        <div class="form-group">
            <button class="btn btn-lg btn-primary btn-block">Submit</button>
        </div>
    </form>
        <% }%>
    
        <a href="/books">Go Back</a>

    </div>
    </div>
       
</div>

<script>
        setTimeout(function(){
            $('#Error').fadeOut('fast');
            $('#Success').fadeOut('fast');
        },5000)
    </script>
<% include ../partials/footer %>