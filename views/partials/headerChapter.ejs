         <div class="container">
        <% if(error&& error.length>0){ %>
        <div id="Error" class="alert alert-danger" role="alert">
        <%=error%>
        </div>
        <% } %>
        <% if(success&& success.length>0){ %>
        <div id="Success" class="alert alert-success" role="alert">
        <%=success%>
        </div>
        <% } %>
    </div>
    
    <script>
        setTimeout(function(){
            $('#Error').fadeOut('fast');
            $('#Success').fadeOut('fast');
        },5000)
    </script>